<%= form_for([:admin, user], html: { class: 'ui form'} ) do |f| %>
  <% if user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(user.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
      <% user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <% unless user.persisted? %>
    <div class="field">
      <%= f.label :temporary_password %><br />
      <%= f.password_field :password, autocomplete: "" %>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :role %><br />
    <%= f.select :role, User.roles.keys.to_a %>
  </div>

  <div class="field">
    <%= f.label :full_name %><br />
    <%= f.text_field :full_name, autocomplete: "" %>
  </div>

  <div class="field">
    <%= f.label :phone_number %><br />
    <%= f.number_field :phone_number, autocomplete: "" %>
  </div>

  <div class="field">
    <%= f.label :company_name %><br />
    <%= f.text_field :company_name, autocomplete: "" %>
  </div>

  <div class="field">
    <%= f.label :company_address %><br />
    <%= f.text_field :company_address, autocomplete: "" %>
  </div>

  <div class="actions">
    <%= f.submit class: 'ui button secondary' %>
  </div>
<% end %>
